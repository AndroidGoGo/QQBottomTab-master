<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/shape_redpack_dialog_backgroud"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <star.yx.widegt.ArcHeaderView
            android:layout_width="match_parent"
            android:layout_height="250dp"/>

        <star.yx.widegt.XCRoundRectImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/zly"/>

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_close_black_30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="某某某"
                android:textColor="#BA8C41"
                android:textSize="14sp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="发了一个红包，金额随机"
                android:textColor="#BA8C41"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_blessing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="恭喜发财，大吉大利"
                android:textColor="#BA8C41"
                android:textSize="20sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_open"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:background="@drawable/va_open_background"
            android:gravity="center"
            android:text="开"
            android:textColor="#050505"
            android:textSize="30sp"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_lookForLuck"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:text="看看大家的手气 >"
        android:textColor="#BA8C41"/>
</LinearLayout>
